{
  "manifest_version": 2,

  "name": "CLOSE ALL THE 9GAG !!1",
  "description": "This extension closes all 9gag tabs in all windows, every 15 minutes.",
  "version": "0.0.1",
  
  "background": {
	"scripts": ["background.js"]
  },
  
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "icons": {
	"16":  "img/icon16.png",
    "48":  "img/icon48.png",
    "128": "img/icon128.png" 
  },
  "permissions": [
	"tabs",
	"storage"
  ]
}