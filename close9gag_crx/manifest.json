{
  "manifest_version": 2,

  "name": "CLOSE ALL THE 9GAG !!1",
  "description": "This extension closes all 9gag tabs in all windows, every 15 minutes.",
  "version": "0.0.1",
  
  "background": {
	"scripts": ["background.js"]
  },
  
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
	"tabs",
	"storage"
  ]
}